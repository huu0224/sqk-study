WITH RECURSIVE ECOLI_GEN AS (
    -- 1. 초기 세대(1세대) 설정: PARENT_ID가 NULL인 개체
    SELECT ID, PARENT_ID, 1 AS GENERATION
    FROM ECOLI_DATA
    WHERE PARENT_ID IS NULL
    
    UNION ALL
    
    -- 2. 재귀적으로 다음 세대 계산: 부모의 ID와 자식의 PARENT_ID 연결
    SELECT E.ID, E.PARENT_ID, G.GENERATION + 1
    FROM ECOLI_DATA E
    INNER JOIN ECOLI_GEN G ON E.PARENT_ID = G.ID
)

-- 3. 최종 결과 출력: 자식이 없는 개체 필터링 및 세대별 그룹화
SELECT 
    COUNT(*) AS COUNT, 
    GENERATION
FROM ECOLI_GEN
WHERE ID NOT IN (
    -- 자식이 있는 개체의 ID 목록에서 제외
    SELECT DISTINCT PARENT_ID 
    FROM ECOLI_DATA 
    WHERE PARENT_ID IS NOT NULL
)
GROUP BY GENERATION
ORDER BY GENERATION;
